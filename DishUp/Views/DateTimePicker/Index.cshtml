@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(function () {
                $('#EVENT_DATE').datetimepicker({
                    defaultDate: '@Model.EVENT_DATE',
                    format: 'L',
                    showClose: true,
                    showClear: true,
                    toolbarPlacement: 'top'
                });

            });
        });
    </script>
}

