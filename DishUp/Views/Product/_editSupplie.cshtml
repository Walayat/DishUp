@model DishUp.PRODUCTO_INSUMO

@using (Ajax.BeginForm("EditSupplie", "PRODUCT", new { id = Model.ID_PRODUCTO }, new AjaxOptions
{
    UpdateTargetId = "supplieList",
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    OnComplete = "ClearSupplie"

}, new { @class = "form-horizontal" }))
{
    @Html.HiddenFor(o => o.ID_PRODUCTO)
    @Html.HiddenFor(o => o.ID_PRODUCTO_INSUMO)

    @Html.HiddenFor(model => model.ID_PRODUCTO)
    <div class="form-group">
        @Html.LabelFor(model => model.ID_USER_SUPPLIER_INSUMO, "Supplie: ", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.DropDownList("ID_INSUMO", null, "Select a supplie", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_USER_SUPPLIER_INSUMO, "", new { @class = "text-danger" })

        </div>
        @Html.LabelFor(model => model.quantity, "Quantity", htmlAttributes: new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.TextBoxFor(model => model.quantity, new { placeholder="Insert Quantity", @name="quantity", @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="col-md-8 col-md-offset-4">
                <br />
                <button id="button2id" name="button2id" data-dismiss="modal" class="btn btn-danger">Cancel</button>

                <button id="ASD" type="submit" name="ASD" class="btn btn-success">Save </button>
            </div>
        </div>
    
    </div>
}
  