@model IEnumerable<SUPPLIER_INSUMO>


<div class="d-sm-flex align-items-center justify-content-between ">
    <h1 class="h3 mb-0 text-gray-800">Supplier Products</h1>
    <a href="@Url.Action("Suppliers","Supplier")" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-download fa-sm text-white-50"></i> Back to Supplier List</a>

</div>
<br />
<br />


<hr>

@if (Model.Count() > 0)
{
    @Html.HiddenFor(x => x.First().ID_SUPPLIER_INSUMO)
    @Html.HiddenFor(x => x.First().ID_SUPPLIER)


    <table class="table" id="listaInsumos" data-paging="true" data-filtering="true" data-sorting="true" data-state="true" cellpadding="10">
        <thead class="thead-dark">

            <tr>
                <th>Name</th>
                <th>Quantity Package</th>
                <th>Medida</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.NAME
                </td>

                <td>
                    @item.QUANTITY_PACKAGE
                </td>
                <td>
                    @item.MEDIDA.NOMBRE
                </td>
                <td>
                    @item.PRICE
                </td>
                <td>
                    @*@Ajax.ActionLink(" Edit ", "EditSupplie", "SUPPLIER", new { id = item.ID_SUPPLIER_INSUMO }, new AjaxOptions { HttpMethod = "GET", InsertionMode = InsertionMode.Replace, UpdateTargetId = "supplieDetail", OnSuccess = "$('#modalSupplier').modal();" }, new { @class = "btn btn-primary iconEdit" })*@

                    @Html.ActionLink("Edit", "EditSupplie", new { id = item.ID_SUPPLIER_INSUMO }, new { @class = "btn btn-primary iconEdit" })
                    @Ajax.ActionLink(" Delete ", "DeleteSupplie", "SUPPLIER", new { id = item.ID_SUPPLIER_INSUMO }, new AjaxOptions { Confirm = "Are you sure you want to delete this item?", HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "supplieList" }, new { @class = "btn btn-danger iconDelete" })
                    @*@Ajax.ActionLink(" Add to My Ingredients ", "AddIngredient", "SUPPLIER", new { id = item.ID_SUPPLIER_INSUMO }, new AjaxOptions { Confirm = "Are you sure you want to add this item to your ingredients?", HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "supplieList" }, new { onclick = "Alerta(" + @item.ID_SUPPLIER_INSUMO + ");", @class = "btn btn-danger iconDelete" })*@
                    @*@Ajax.ActionLink(" Add to My Ingredients ", null,null,  new { id = item.ID_SUPPLIER_INSUMO }, 
                   new AjaxOptions { Confirm = "Are you sure you want to add this item to your ingredients?", 
                       HttpMethod = "POST", InsertionMode = InsertionMode.Replace, UpdateTargetId = "supplieList" }, 
                   new { onclick = "AddIngredient(" + @item.ID_SUPPLIER_INSUMO + ");", @class = "btn btn-danger iconDelete" })*@

                    <button id="@item.ID_SUPPLIER_INSUMO" onclick="AddIngredient(@item.ID_SUPPLIER_INSUMO)" class="btn btn-danger iconDelete">
                        Add to My Ingredients
                    </button>
                </td>
            </tr>
        }



    </table>



}




